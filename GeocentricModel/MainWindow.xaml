<Window x:Class="GeocentricModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Retrograde Motion of Geocentric Model" 
		Height="830" Width="830" MaxWidth="900" MaxHeight="900" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Loaded="MainWindow_Loaded" Icon="Graphics/icon.ico">
	<Window.Background>
		<ImageBrush ImageSource="/GeocentricModel;component/Graphics/background.jpg" Stretch="None" TileMode="None" />
	</Window.Background>
	<Grid>
		<Image Source="/GeocentricModel;component/Graphics/Earth.png" Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center" />
		<Canvas Name="Canvas" />
		<Canvas>
			<Ellipse Height="150" Width="150" Name="ParentOrbiter" Stroke="White" StrokeThickness="1" />
			<Ellipse Height="50" Width="50" Name="ChildOrbiter" Fill="Red" Stroke="Red" />
		</Canvas>
	</Grid>
</Window>

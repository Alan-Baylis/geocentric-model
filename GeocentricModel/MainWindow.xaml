<Window x:Class="GeocentricModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Retrograde Motion of Geocentric Model" 
		Height="830" Width="830" Name="wndMain" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" MaxWidth="900" MaxHeight="900">
	<Grid>
		<Canvas Name="Canvas1" />
		<Canvas Name="Canvas2" />
		<Canvas>
			<Ellipse Height="150" Width="150" Name="ellipseOrbit" Stroke="White" StrokeLineJoin="Miter" StrokeThickness="1" />
			<Ellipse Height="50" Width="50" Name="ellipseOrbitOrbiter" Fill="Red" Stroke="Red" />
		</Canvas>
		<Canvas>
			<Image Source="/GeocentricModel;component/Graphics/1_Earth_%28blank_2%29.png" Width="300" Height="300" Margin="250,250,0,0" />
		</Canvas>
	</Grid>
	<Window.Background>
		<ImageBrush ImageSource="/GeocentricModel;component/Graphics/Stars_In_The_Night_Sky_by_demykins.jpg" Stretch="None" TileMode="None" />
	</Window.Background>
</Window>
